package com.mycompany.menu;
import java.util.ArrayList;

public class suites{
    
    static String nome;
    static ArrayList<Integer> suitePadrao = new ArrayList<>();
    static boolean[] quarto = new boolean[10];
    
    public static void suitePadrao(){
        
        
        while(true){
            
            System.out.println();
            System.out.println("1 - Exibir reserva.");
            System.out.println("2 - Escolher quarto.");
            System.out.println("3 - Voltar");
            System.out.println();
            var escolha = lerDados.lerInt();
            
            switch(escolha){
                
                case 1:
                    exibirReserva();
                    break;
                case 2:
                    fazerReserva();
                    break;
                case 3:
                    return;
                default:
                    System.out.println("Numero invalido. Tente novamente");
        }
    }
        }
    public static void exibirReserva(){
        
        System.out.println("----- Reservas de Quartos -----");
        for (int i = 0; i < quarto.length; i++) {
            if (quarto[i]) {
                System.out.println("Quarto " + (i + 1) + ": Ocupado por " + nome);
            } else {
                System.out.println("Quarto " + (i + 1) + ": Disponivel");
            }
    }
    }
    public static void fazerReserva() {
        
        System.out.println("Qual seu nome?");
        nome = lerDados.lerTexto();
        System.out.println();
        System.out.println("Qual quarto deseja reservar?");
        var numeroQuarto = lerDados.lerInt();
        if (numeroQuarto >= 1 && numeroQuarto <= quarto.length) {
            quarto[numeroQuarto - 1] = true;
            System.out.println("Quarto " + numeroQuarto + " reservado para " + nome);
        } else {
            System.out.println("Número de quarto inválido. Por favor, escolha um número entre 1 e 10.");
        }
        suitePadrao.add(numeroQuarto);
    }
    public static void lista1(){
        for(int reserva : suitePadrao){
            System.out.println("Quarto numero " + reserva + " ocupado por " + nome);
            System.out.println();
        }
    }
}
